@page
@model LocationTracker.Pages.Locations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Creating a New Location</h2>
<div>
    <h6>In order to create a new location the following fields are required:</h6>
    <ul>
        <li>Location Code - 3 character field.</li>
        <li>State/Province - 2 character field.</li>
        <li>Country - 3 character field.</li>
    </ul>
    <hr />
</div>


<form method="post">
    <div class="form-row"> 
        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.LocationCode" class="control-label"></label>
            <input asp-for="LocationCreateVM.LocationCode" class="form-control" />
            <span asp-validation-for="LocationCreateVM.LocationCode" class="form text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.BusinessUnitName" class="control-label"></label>
            <select asp-for="LocationCreateVM.BusinessUnitID" class="form-control" asp-items="ViewBag.BusinessUnitID"></select>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.DivisionName" class="control-label"></label>
            <select asp-for="LocationCreateVM.DivisionID" class="form-control" asp-items="ViewBag.DivisionID"></select>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="LocationCreateVM.FirstAddress" class="control-label"></label>
            <input asp-for="LocationCreateVM.FirstAddress" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LocationCreateVM.SecondAddress" class="control-label"></label>
            <input asp-for="LocationCreateVM.SecondAddress" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.City" class="control-label"></label>
            <input asp-for="LocationCreateVM.City" class="form-control">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="LocationCreateVM.StateProvince" class="control-label"></label>
            <input asp-for="LocationCreateVM.StateProvince" class="form-control">
            <span asp-validation-for="LocationCreateVM.StateProvince" class="form-inline text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="LocationCreateVM.Country" class="control-label"></label>
            <input asp-for="LocationCreateVM.Country" class="form-control" typeof="text" />
            <span asp-validation-for="LocationCreateVM.Country" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="LocationCreateVM.PostalCode" class="control-label"></label>
            <input asp-for="LocationCreateVM.PostalCode" class="form-control" type="text">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.Lattitude" class="control-label"></label>
            <input asp-for="LocationCreateVM.Lattitude" type="number" step=0.000001 class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="LocationCreateVM.Longitude" class="control-label"></label>
            <input asp-for="LocationCreateVM.Longitude" type="number" step=0.000001 class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4">
            <input type="submit" value="Create" class="btn btn-default btn-primary" />
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
