@page
@model LocationTracker.Pages.Locations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this location?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LocationDeleteVM.LocationCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocationDeleteVM.LocationCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LocationDeleteVM.DivisionName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocationDeleteVM.DivisionName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LocationDeleteVM.StateProvince)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocationDeleteVM.Country)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="LocationDeleteVM.LocationID" />
        <input type="hidden" asp-for="LocationDeleteVM.AddressID" />
        <input class ="btn btn-primary" type="submit" value="Delete" />
        <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
    </form>
</div>
