@page
@model LocationTracker.Pages.Vendors.EditModel

@{
    ViewData["Title"] = "Edit Vendor";
}

<h2>Edit</h2>

<h4>Vendor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.VendorVM.VendorID" />
            <div class="form-group">
                <label asp-for="@Model.VendorVM.VendorName" class="control-label"></label>
                <input asp-for="@Model.VendorVM.VendorName" class="form-control" />
                <span asp-validation-for="@Model.VendorVM.VendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VendorVM.VendorNumber" class="control-label"></label>
                <input asp-for="@Model.VendorVM.VendorNumber" class="form-control" />
                <span asp-validation-for="@Model.VendorVM.VendorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
