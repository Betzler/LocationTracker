@page
@model LocationTracker.Pages.Studies.CreateModel

@{
    ViewData["Title"] = "Create";

}

<h4>Study</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.StudyCreateVM.StudyName" class="control-label"></label>
                <input asp-for="@Model.StudyCreateVM.StudyName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="StudyCreateVM.StudySize" class="control-label"></label>
                <input asp-for="StudyCreateVM.StudySize" class="form-control" type="number" min="0" max="15" />
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.StudyCreateVM.SelectedLocations" class="control-label"></span>
                <label asp-for="@Model.StudyCreateVM.SelectedLocations" class="control-label"></label>
                <br />
                <select class="selectpicker" id="location-select" multiple="multiple" title="Select Locations..." data-live-search="true" asp-for="@Model.StudyCreateVM.SelectedLocations" asp-items="@Model.LocationCodeMSL"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
