@page
@model LocationTracker.Pages.Studies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudyIndexVM[0].StudyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StudyIndexVM) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudyName)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.StudyID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StudyID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StudyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
