            </div>
            <div class="form-group">
                <label asp-for="AssessmentCreateVM.EndDate" class="control-label"></label>
                <input asp-for="AssessmentCreateVM.EndDate" class="form-control" type="date"/>
                <span asp-validation-for="AssessmentCreateVM.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssessmentCreateVM.Comment" class="control-label"></label>
                <input asp-for="AssessmentCreateVM.Comment" class="form-control" />
                <span asp-validation-for="AssessmentCreateVM.Comment" class="text-danger"></span>
            </div>
