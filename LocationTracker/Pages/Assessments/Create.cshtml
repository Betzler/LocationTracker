<h4>AssessmentCreateVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssessmentCreateVM.LocationsList" class="control-label"></label>
                <select asp-for="AssessmentCreateVM.LocationID" class ="form-control" asp-items="@Model.AssessmentCreateVM.LocationsList"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssessmentCreateVM.VendorID" class="control-label"></label>
