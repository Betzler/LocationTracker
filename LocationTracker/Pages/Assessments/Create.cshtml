                <span asp-validation-for="AssessmentCreateVM.VendorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssessmentCreateVM.StatusesList" class="control-label"></label>
                <select asp-for="AssessmentCreateVM.StatusID" class ="form-control" asp-items="@Model.AssessmentCreateVM.StatusesList"></select>
            </div>
