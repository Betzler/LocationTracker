<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Location Tracker</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>


</head>
<body>
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-page="/Index" class="navbar-brand">
                <img src="~/images/ADM_logo_reverse.png" width="30" height="40" class="d-inline-block align-self-auto mr-2" />Location Tracker
            </a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Overview/Index">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Locations/Index">Locations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Studies/Index">Studies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Vendors/Index">Vendors</a>
                    </li>

                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>


    <partial name="_CookieConsentPartial" />

    <main role="main" class="container" style="margin-top: 50px">
        @RenderBody()

        <hr />

    </main>


    <environment include="Development">

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
        <link rel="stylesheet" href="~/lib/bootstrap-select/1.13.2/css/bootstrap-select.min.css" />
        <script src="~/lib/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>

        <link rel="stylesheet" href="~/lib/leaflet/1.3.4/leaflet.css" />

    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

    </environment>

    <script src="~/lib/moment/2.22.2/js/moment.min.js"></script>
    <script src="~/lib/chart/2.7.3/js/Chart.min.js"></script>
    <script src="~/lib/leaflet/1.3.4/leaflet.js"></script>

    @RenderSection("Scripts", required: false)



    <footer class="container">
        <div class="container">
            <p>&copy; 2018 - Location Tracker</p>
        </div>
    </footer>
</body>

</html>
